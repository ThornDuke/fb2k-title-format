{
  "comments": {
    "lineComment": {
      "comment": "//",
      "noIndent": true
    }
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"]
  ],
  "autoClosingPairs": [
    ["(", ")"],
    ["[", "]"],
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "`", "close": "`", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["'", "'"],
    ["\"", "\""],
    ["[", "]"],
    ["%", "%"],
    ["<", ">"]
  ],
  "colorizedBracketPairs": [
    ["(", ")"],
    ["[", "]"]
  ],
  "autoCloseBefore": ";:.,=}])>` \n\t",
  "folding": {
    "markers": {
      "start": "^//section>.*$",
      "end": "^//endsection>.*$"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^((?!\\/\\/).)*(\\([^)\"'`]*|\\[[^\\]\"'`]*)$",
    "decreaseIndentPattern": "^((?!\\/\\/).)*\\s*[\\)\\]].*$"
  },
  "onEnterRules": [
    // Riga non commentata e cursore subito dopo la virgola:
    // 1. all'interno di una funzione
    //    alla linea successiva è aggiunto un indent
    {
      "beforeText": "^((?!\\/\\/).)*\\s*\\$[a-zA-Z0-9_]+\\([a-zA-Z0-9%_]+,",
      "action": { "indent": "indent" }
    },
    // 2. NON all'interno di una funzione
    //    la linea successiva ha lo stesso indent di quella attuale
    {
      "beforeText": "^((?!\\/\\/).)*\\s*.*,",
      "action": { "indent": "none" }
    },
    // Simbolo del commento senza altro testo dopo:
    // la nuova riga è non commentata e non indentata
    {
      "beforeText": "^\\/\\/$",
      "action": {
        "indent": "none"
      }
    },
    // simbolo di commento con spazi subito dopo:
    // la riga successiva è commentata e non indentata
    {
      "beforeText": "^\\/\\/\\s+.*$",
      "action": {
        "indent": "none",
        "appendText": "// "
      }
    }
  ]
}
