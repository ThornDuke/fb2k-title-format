{
  "comments": {
    "lineComment": "//"
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"]
  ],
  "autoClosingPairs": [
    ["(", ")"],
    ["[", "]"],
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "`", "close": "`", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["'", "'"],
    ["\"", "\""],
    ["[", "]"],
    ["%", "%"],
    ["<", ">"]
  ],
  "colorizedBracketPairs": [
    ["(", ")"],
    ["[", "]"]
  ],
  "autoCloseBefore": ";:.,=}])>` \n\t",
  "folding": {
    "markers": {
      "start": "^//section>.*$",
      "end": "^//endsection>.*$"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^((?!\\/\\/).)*(\\([^)\"'`]*|\\[[^\\]\"'`]*)$",
    "decreaseIndentPattern": "^((?!\\/\\/).)*\\s*[\\)\\]].*$",
    "indentNextLinePattern": "^((?!\\/\\/).)*\\s*.*,\\s*$"
  },
  "onEnterRules": [
    // Riga non commentata e cursore dopo la parentesi aperta di una funzione:
    // la riga successiva è commentata
    {
      "beforeText": "^((?!\\/\\/).*\\s+$[a-zA-Z0-9_]\\()",
      "action": { "indent": "indent" }
    },
    // Riga non commentata e cursore subito dopo la virgola:
    // la linea successiva è indentata
    {
      "beforeText": "^(?!\\/\\/).*\\s*.*,",
      "action": { "indent": "indent" }
    },
    // Simbolo del commento senza altro testo dopo:
    // la nuova riga è non commentata e non indentata
    {
      "beforeText": "^\\/\\/$",
      "action": {
        "indent": "none"
      }
    },
    // simbolo di commento con spazi subito dopo:
    // la riga successiva è commentata e non indentata
    {
      "beforeText": "^\\/\\/\\s+.*$",
      "action": {
        "indent": "none",
        "appendText": "// "
      }
    }
  ]
}
