{
  "comments": {
    "lineComment": "//"
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"]
  ],
  "autoClosingPairs": [
    ["(", ")"],
    ["[", "]"],
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "`", "close": "`", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["'", "'"],
    ["\"", "\""],
    ["[", "]"],
    ["%", "%"],
    ["<", ">"]
  ],
  "colorizedBracketPairs": [
    ["(", ")"],
    ["[", "]"]
  ],
  "autoCloseBefore": ";:.,=}])>` \n\t",
  "folding": {
    "markers": {
      "start": "^//section>.*$",
      "end": "^//endsection>.*$"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^((?!\\/\\/).)*(\\([^)\"'`]*|\\[[^\\]\"'`]*)$",
    "decreaseIndentPattern": "^((?!\\/\\/).)*\\s*[\\)\\]].*$",
    "indentNextLinePattern": "^((?!\\/\\/).)*\\s*.*,\\s*$"
  },
  "onEnterRules": [
    // aggiunge un indent se il cursore è dopo la parentesi di una funzione
    {
      "beforeText": "^((?!\\/\\/).*\\s+$[a-zA-Z0-9_]\\()",
      "action": { "indent": "indent" }
    },
    // aggiunge un indent se il cursore è dopo la virgola in una riga
    // non commentata
    {
      "beforeText": "^(?!\\/\\/).*\\s*.*,",
      "action": { "indent": "indent" }
    },
    // Simbolo del commento senza altro testo dopo.
    // La nuova riga è non commentata e non indentata
    {
      "beforeText": "^\\/\\/$",
      "action": {
        "indent": "none"
      }
    },
    // simbolo di commento con spazi subito dopo;
    // la riga successiva è commentata e non indentata
    {
      "beforeText": "^\\/\\/\\s+.*$",
      "action": {
        "indent": "none",
        "appendText": "// "
      }
    }
  ]
}
