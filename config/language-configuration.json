{
  "comments": {
    "lineComment": {
      "comment": "//",
      "noIndent": true
    }
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"]
  ],
  "autoClosingPairs": [
    ["(", ")"],
    ["[", "]"],
    { "open": "'", "close": "'", "notIn": ["string", "comment"] },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "`", "close": "`", "notIn": ["string", "comment"] }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["'", "'"],
    ["\"", "\""],
    ["[", "]"],
    ["%", "%"],
    ["<", ">"]
  ],
  "colorizedBracketPairs": [
    ["(", ")"],
    ["[", "]"]
  ],
  "autoCloseBefore": ";:.,=}])>` \n\t",
  "folding": {
    "markers": {
      "start": "^//section>.*$",
      "end": "^//endsection>.*$"
    }
  },
  "onEnterRules": [
    {
      "beforeText": "^\\/\\/\\s+.*$",
      "afterText": "^.*$",
      "action": {
        "indent": "none",
        "appendText": "// "
      }
    },
    {
      "beforeText": "^\\/\\/.*$",
      "afterText": "^.+$",
      "action": {
        "indent": "none",
        "appendText": "//"
      }
    }
  ]
}
